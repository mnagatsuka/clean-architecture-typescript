{
    "extends": "../../../../tsconfig.base.json",
    "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "types": ["node"],
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts",
    "../../../../src/entities/**/*.ts",
    "../../../../src/usecases/**/*.ts",
    "../../../../src/interface-adapters/**/*.ts",
    "../../../../src/frameworks-drivers/**/*.ts",
    "../../../../shared/**/*.ts"
  ],
  "exclude": ["node_modules", "test"]
}