{
  "type": "module",
  "scripts": {
    "test": "pnpm test:unit --run && pnpm test:int --run && pnpm test:e2e --run",
    "test:unit": "vitest --config test/unit/vitest.config.ts",
    "test:int": "pnpm test:int:api --run && pnpm test:int:web --run",
    "test:int:api": "vitest --config test/integration/frameworks-drivers/api/vitest.config.ts",
    "test:int:web": "vitest --config test/integration/frameworks-drivers/web/vitest.config.ts",
    "test:e2e": "exec playwright test",
    "test:e2e:ui": "exec playwright test --ui",
    "test:e2e:report": "exec playwright show-report",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "lint": "biome lint .",
    "lint:fix": "biome check . --write",
    "precommit": "pnpm lint && pnpm format",
    "precommit:fix": "pnpm lint:fix && pnpm format:fix"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.1.4",
    "@vitest/coverage-v8": "3.1.3",
    "biome": "^0.3.3",
    "dotenv": "^16.5.0",
    "jsdom": "^26.1.0",
    "msw": "^2.8.4",
    "playwright": "^1.52.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@tanstack/react-query": "^5.77.1",
    "cors": "^2.8.5",
    "hono": "^4.7.9",
    "logger": "^0.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "msw": {
    "workerDirectory": [
      "src/frameworks-drivers/web/react/public"
    ]
  }
}
